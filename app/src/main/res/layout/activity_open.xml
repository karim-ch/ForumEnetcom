<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.fatma.forumenetcom.OpenActivity"
    android:background="#e3f1f2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/open_activity_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/enetcom"
            app:layout_collapseMode="parallax" />

        <TextView
            android:id="@+id/open_activity_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Act Name"
            android:textColor="#000"
            android:textSize="23dp"
            android:layout_below="@+id/open_activity_image"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/open_activity_title"
            android:id="@+id/space1">
        </Space>

        <TextView
            android:id="@+id/open_activity_date"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space1"
            android:gravity="center"
            android:text="Act Date"
            android:textColor="#000"
            android:textSize="15dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space2"
            android:layout_below="@id/open_activity_date">
        </Space>

        <TextView
            android:id="@+id/open_activity_place"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="Act Place"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_below="@+id/space2"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space3"
            android:layout_below="@+id/open_activity_place">
        </Space>

        <TextView
            android:id="@+id/open_activity_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Act Descrip"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_below="@+id/space3"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/space4"
            android:layout_below="@+id/open_activity_descrip">
        </Space>


        <Button
            android:id="@+id/btn_register_workshop"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:layout_weight="6"
            android:background="#FFBE6517"
            android:text="Register"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/seen_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_register_workshop"
            android:layout_centerHorizontal="true"
            android:layout_weight="4"
            android:src="@drawable/verfi" />




    </RelativeLayout>
</ScrollView>